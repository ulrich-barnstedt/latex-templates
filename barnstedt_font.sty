\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{barnstedt_font}

\RequirePackage{fontspec}
\RequirePackage{kvoptions}

\SetupKeyvalOptions{
    family=bfont,
    prefix=bfont@,
}
\DeclareBoolOption{monospace}
\ProcessKeyvalOptions*

\newcommand{\mspc}[1]{{\color{violet} \texttt{#1}}}

\ifbfont@monospace
    \setmainfont{JetBrainsMono}
    \setmonofont{JetBrainsMono}
\else
    \setmainfont{Roboto}
    \setmonofont{JetBrainsMono}
\fi
